<assembly>
    <id>dist</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>org.glassfish:javax.json</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <unpack>true</unpack>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>com.smartbear:ready-aws-plugin</include>
            </includes>
            <unpackOptions>
                <excludes>
                    <exclude>com\smartbear\StandaloneLauncher*.class</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets> 
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/assembly</directory>
            <outputDirectory>/META-INF</outputDirectory>
            <includes>
                <include>readme.txt</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>